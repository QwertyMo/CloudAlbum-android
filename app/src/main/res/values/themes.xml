<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CloudAlbum.Main" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor">#FFFFFF</item>
    </style>

    <style name="Theme.CloudAlbum.Starting" parent="Theme.SplashScreen">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.CloudAlbum.Main</item>
    </style>
</resources>